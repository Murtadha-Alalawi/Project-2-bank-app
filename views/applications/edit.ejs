<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editing <%= application.title %></title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome <%= user.firstName %></h1>
    <h2>Update Your Account</h2>
    <form action="/users/<%= user._id %>/applications/<%= application._id %>" method="POST">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= application.name %>">
        <label for="phoneNumber">Phone Number</label>
        <input type="text" name="phoneNumber" id="phoneNumber" value="<%= application.phoneNumber %>">
        <label for="address">Address</label>
        <input type="text" name="address" id="address" value="<%= application.address %>">
        <button type="submit">Save</button>
        <form action="/users/<%= user._id %>/bank-accounts/<%= account._id %>?_method=DELETE" method="POST">
            <button>Delete Account</button>
        </form>
    </form>
    <h2>Update Your Card</h2>
    <form action="/users/<%= user._id %>/bank-accounts/<%= card._id %>/edit" method="POST">
        <label for="phoneNumber">Phone Number</label>
        <input type="text" name="phoneNumber" id="phoneNumber" value="<%= card.phoneNumber %>">
        <button>Update Card</button>
        <form action="/users/<%= user._id %>/bank-accounts/<%= card._id %>?_method=DELETE" method="POST">
            <button>Delete Card</button>
        </form>
    </form>
</body>
</html>